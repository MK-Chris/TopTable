[% # Note That the '-' at the beginning or end of TT code  -%]
[% # "chomps" the whitespace/newline at that end of the    -%]
[% # output (use View Source in browser to see the effect) -%]
[%-
team_club_html = FILTER html_entity; team.club.short_name; END;
team_name_html = FILTER html_entity; team.name; END;
# Check there's a season
IF season;
  season_html = FILTER html_entity; season.name; END;
  
  # Check there's a team season
  IF team_season;
    IF specific_season;
      SET uri = c.uri_for_action("/league-tables/view_specific_season", [team_season.division.url_key, season.url_key]);
    ELSE;
      SET uri = c.uri_for_action("/league-tables/view_current_season", [team_season.division.url_key]);
    END;
-%]
<div id="tabs">
  <ul>
    <li><a href="#details">[% c.maketext("teams.form.legend.team-details") %]</a></li>
    <li><a href="#players">[% c.maketext("teams.heading.players") %]</a></li>
[%
IF season.complete;
  SET fixtures_results_text = c.maketext("teams.heading.results");
ELSE;
  SET fixtures_results_text = c.maketext("teams.heading.fixtures-results");
END;
-%]
    <li><a href="#fixtures-results">[% fixtures_results_text %]</a></li>
  </ul>
  
  <div id="details">
    <h4>[% c.maketext("teams.heading.summary") %]</h4>
    <dl>
      <dt>[% c.maketext("teams.field.club") %]</dt>
[%
  IF specific_season;
    SET club_uri = c.uri_for_action("/clubs/view_specific_season", [team.club.url_key, season.url_key]);
  ELSE;
    SET club_uri = c.uri_for_action("/clubs/view_current_season", [team.club.url_key]);
  END;
-%]
      <dd><a href="[% club_uri %]">[% team.club.full_name | html_entity %]</a></dd>
      <dt>[% c.maketext("teams.field.home-night") %]</dt>
      <dd>[% team_season.home_night.weekday_name %]</dd>
[% # Check we have a match start time in either the team, the club or the season;
  IF team.default_match_start OR team.club.default_match_start OR season.default_match_start;
-%]
      <dt>[% c.maketext("teams.field.start-time") %]</dt>
      <dd>[% FILTER truncate(5, ''); team.default_match_start OR team.club.default_match_start OR season.default_match_start; END; %]</dd>
[%
  END;
-%]
      <dt>[% c.maketext("teams.field.captain") %]</dt>
[%
  IF team_season.captain.id;
    IF specific_season;
      SET captain_uri = c.uri_for_action("/people/view_specific_season" [team_season.captain.url_key, season.url_key]);
    ELSE;
      SET captain_uri = c.uri_for_action("/people/view_current_season" [team_season.captain.url_key]);
    END;
-%]
      <dd><a href="[% captain_uri %]">[% team_season.captain.display_name %]</a></dd>
[%
  ELSE;
-%]
      <dd>[% c.maketext("teams.captain.none") %]</dd>
[%
  END;
  
  IF specific_season;
    SET table_uri = c.uri_for_action("/league-tables/view_specific_season" [team_season.division.url_key, season.url_key]);
  ELSE;
    SET table_uri = c.uri_for_action("/league-tables/view_current_season" [team_season.division.url_key]);
  END;
-%]
        <dt>[% c.maketext("teams.field.division") %]</dt>
        <dd><a href="[% table_uri %]">[% team_season.division.name | html_entity %]</a></dd>
        <dt>[% c.maketext("teams.league-position") %]</dt>
        <dd>[% league_position %]</dd>
[%
  IF team_season.season.league_ranking_template.assign_points;
-%]
        <dt>[% c.maketext("teams.points") %]</dt>
        <dd>[% c.i18n_numberformat.format_number( team_season.points ) %]</dd>
[%
  END;
-%]
    </dl>
    
    <h4>[% c.maketext("teams.heading.statistics") %]</h4>
    <div id="stats-left">
      <div id="stats-matches">
        <h5>[% c.maketext("stats.heading.matches") %]</h5>
        <dl>
          <dt>[% c.maketext("stats.label.played") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.matches_played ) %]</dd>
          <dt>[% c.maketext("stats.label.won") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.matches_won ) %]</dd>
          <dt>[% c.maketext("stats.label.drawn") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.matches_drawn ) %]</dd>
          <dt>[% c.maketext("stats.label.lost") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.matches_lost ) %]</dd>
        </dl>
      </div>
      
      <div id="stats-games">
        <h5>[% c.maketext("stats.heading.games") %]</h5>
        <dl>
          <dt>[% c.maketext("stats.label.played") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.games_played ) %]</dd>
          <dt>[% c.maketext("stats.label.won") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.games_won ) %]</dd>
          <dt>[% c.maketext("stats.label.lost") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.games_lost ) %]</dd>
          <dt>[% c.maketext("stats.label.average") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.average_game_wins, 2, 1 ) %]</dd>
        </dl>
      </div>
    </div>
    
    <div id="stats-right">
      <div id="stats-legs">
        <h5>[% c.maketext("stats.heading.legs") %]</h5>
        <dl>
          <dt>[% c.maketext("stats.label.played") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.legs_played ) %]</dd>
          <dt>[% c.maketext("stats.label.won") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.legs_won ) %]</dd>
          <dt>[% c.maketext("stats.label.lost") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.legs_lost ) %]</dd>
          <dt>[% c.maketext("stats.label.average") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.average_leg_wins, 2, 1 ) %]</dd>
        </dl>
      </div>
      
      <div id="stats-points">
        <h5>[% c.maketext("stats.heading.points") %]</h5>
        <dl>
          <dt>[% c.maketext("stats.label.played") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.points_played ) %]</dd>
          <dt>[% c.maketext("stats.label.won") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.points_won ) %]</dd>
          <dt>[% c.maketext("stats.label.lost") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.points_lost ) %]</dd>
          <dt>[% c.maketext("stats.label.average") %]</dt>
          <dd class="numeric">[% c.i18n_numberformat.format_number( team_season.average_point_wins, 2, 1 ) %]</dd>
        </dl>
      </div>
    </div>
    <div class="clear-fix"></div>
  </div>
  
  <div id="players">
[%
  IF authorisation.person_create;
-%]
<a href="[% c.uri_for_action("/people/create_with_team_by_url_key", [team.club.url_key, team.url_key]) %]"><img src="[% c.uri_for("/static/images/icons/0009-Add-icon-32.png") %]" alt="[% c.maketext("people.create-for", team_club_html, team_name_html) %]" title="[% c.maketext("people.create-for", team_club_html, team_name_html) %]" /></a>
[%
  END;
-%]
    <h4>[% c.maketext("divisions.option.league-averages-singles") %]</h4>
[%
  # Singles averages
  INCLUDE "html/league-averages/view_singles.ttkt";
-%]

    <h4>[% c.maketext("divisions.option.league-averages-doubles-individuals") %]</h4>
[%
  # Individual doubles averages
  INCLUDE "html/league-averages/view_doubles-individuals.ttkt";
-%]

    <h4>[% c.maketext("divisions.option.league-averages-doubles-pairs") %]</h4>
[%
  # Individual doubles averages
  INCLUDE "html/league-averages/view_doubles-pairs.ttkt";
-%]
  </div>
  
  <div id="fixtures-results">
[%
  # Fixtures / results
  INCLUDE "html/fixtures-results/view-by-team.ttkt";
-%]
  </div>
</div>
[%
  # Else for the check for a team season
  ELSE;
-%]
<div class="no-entry">[% c.maketext("teams.message.did-not-enter", team_club_html, team_name_html, season_html) %]</div>
[%
  # End for the check for a team season
  END;
# End check for a season
END;
 %]
[%
  IF seasons == 1;
    SET season_text = c.maketext("object.singular.seasons");
  ELSE;
    SET season_text = c.maketext("object.plural.seasons");
  END;
-%]

<div class="seasons-count"><a href="[% c.uri_for_action("/teams/view_seasons_first_page_by_url_key", [team.club.url_key, team.url_key]) %]">[% c.maketext("teams.seasons.count-text", team_club_html, team_name_html, seasons, season_text) %]</a></div>